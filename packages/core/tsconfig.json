{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist/esm",
    "types": [
      "vite/client"
    ]
  },
  "vueCompilerOptions": {
    "strictTemplates": true,
    "dataAttributes": [
      "data-popper-*",
      "data-action"
    ]
  },
  "include": [
    "src/*",
    "src/**/*"
  ]
}
