{
  "compilerOptions": {
    "assumeChangesOnlyAffectDirectDependencies": true,
    "lib": [
      "es2021",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "isolatedModules": true,
    "allowJs": true,
    "plugins": [
      {
        "transform": "transformer-cjs-imports"
      }
    ]
  },
  "exclude": [
    "**/**.test.tsx",
    "**/**.test.ts",
    "**/examples/**"
  ]
}
