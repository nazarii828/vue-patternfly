    "eslint-plugin-n": "^15.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.7.0",
    "transformer-cjs-imports": "workspace:^4.38.1",
    "ts-patch": "^2.0.2",
    "turbo": "^1.6.3",
    "typescript": "^4.8.4"
