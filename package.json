    "build:esm": "tsc --build --verbose packages/tsconfig.json"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "concurrently": "^7.5.0",
    "eslint": "^8.27.0",
