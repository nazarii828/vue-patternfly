{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveValueImports": false,
    "verbatimModuleSyntax": false,
    "types": [
      "vite/client",
    ],
  },
  "include": [
    "./src/*",
    "./src/**/*"
  ]
}
