{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "assumeChangesOnlyAffectDirectDependencies": true,
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "importHelpers": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "plugins": [
      {
        "transform": "transformer-cjs-imports"
      }
    ]
  },
  "exclude": [
    "**/**.test.tsx",
    "**/**.test.ts",
    "**/examples/**"
  ]
}
